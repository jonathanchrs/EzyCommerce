<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20px"
    android:layout_marginRight="60px">

    <ImageView
        android:id="@+id/cartImage"
        android:layout_width="280px"
        android:layout_height="280px"/>

    <LinearLayout
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart Name"
            android:textSize="7pt"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cartDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you think you're living an ordinary life? You are so mistaken it's difficult to even explain. "
            android:textSize="6pt"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/cartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500"
            android:textSize="7pt"
            android:textColor="#000"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <EditText
            android:id="@+id/textQuantity"
            android:layout_width="180px"
            android:layout_height="60dp"
            android:text="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/increaseQty"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="+"/>

        <Button
            android:id="@+id/decreaseQty"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="-"/>

    </LinearLayout>



</LinearLayout>